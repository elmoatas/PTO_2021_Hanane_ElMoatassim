<Window x:Name="Playground" x:Class="Pong_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pong_Game"
        mc:Ignorable="d"
        Title="PingPong" Height="500" Width="800" Background="#FF1C2C02">
    <Grid>
        <Canvas x:Name="Canvas" Height="450" Width="800" />
        <Button x:Name="start_Button" VerticalAlignment="Top" HorizontalAlignment="Center" Content="Start" Click="start_Button_Click" Background="#FFE6DD23" />
        <Button x:Name="Pause_Button" VerticalAlignment="Top" HorizontalAlignment="Left" Content="II" Click="Pause_Button_Click"  Background="#FFE6DD23" Margin="357,0,0,0" Height="20" Width="24" />
        <Label x:Name="ScorePlayer1Label" Content="score P1" HorizontalAlignment="Left" Height="30" Margin="296,0,0,0" VerticalAlignment="Top" Width="44"/>
        <Label x:Name="ScorePlayer2Label" Content="score P2" HorizontalAlignment="Left" Height="24" Margin="419,3,0,0" VerticalAlignment="Top" Width="114"/>
    </Grid>
</Window>
